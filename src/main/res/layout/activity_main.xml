<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/videolinaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Videolina"></Button>

            <Button
                android:id="@+id/tgrButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TGR Sardegna "></Button>

            <Button
                android:id="@+id/foodnetworkButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FoodNetwork"></Button>

            <Button
                android:id="@+id/canale5button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Canale 5"></Button>

            <Button
                android:id="@+id/rsila1button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rsi La1"></Button>

            <Button
                android:id="@+id/rsila2button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rsi La2"></Button>

            <Button
                android:id="@+id/tv8button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TV8"></Button>

            <Button
                android:id="@+id/italia1button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Italia 1"></Button>

            <Button
                android:id="@+id/topcrimebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Crime"></Button>

            <Button
                android:id="@+id/giallobutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giallo"></Button>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>